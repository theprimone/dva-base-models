{
  "compilerOptions": {
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "target": "es5",
      "rootDir": "src",
      "outDir": "dist",
      "declaration": true,
      "lib": ["dom", "es6"],
      "sourceMap": true
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}
